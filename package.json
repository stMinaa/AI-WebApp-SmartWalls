{
  "name": "ai-aplikacija",
  "version": "1.0.0",
  "description": "This project is a full-stack web application for managing assemblies, buildings, and tenants, built with ASP.NET Core (backend) and React (frontend).",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cd backend && node server.js",
    "backend": "cd backend && node server.js",
    "frontend": "cd frontend && npm start",
    "test": "jest backend/test/ --detectOpenHandles --forceExit --runInBand",
    "test:arch": "jest backend/test/architecture/ --verbose",
    "lint": "cd backend && eslint . --ext .js",
    "lint:fix": "cd backend && eslint . --ext .js --fix",
    "deps:check": "cd backend && depcruise --config .dependency-cruiser.js src",
    "deps:graph": "cd backend && depcruise --config .dependency-cruiser.js --output-type dot src | dot -T svg > ../dependency-graph.svg",
    "quality": "npm run lint && npm run test:arch",
    "quality:full": "npm run lint && npm run deps:check && npm run test:arch && npm test",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^6.0.2",
    "dependency-cruiser": "^17.3.8",
    "eslint": "^9.39.2",
    "eslint-plugin-boundaries": "^5.4.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
